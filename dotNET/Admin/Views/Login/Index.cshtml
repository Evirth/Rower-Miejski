@using Microsoft.AspNetCore.Mvc.Localization
@model Admin.Models.Login
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <form asp-controller="Login" method="post">
            <div class="form-group">
                <div class="col-md-12">
                    <label asp-for="Username" class="control-label">@Localizer["Username"]</label>
                    <input asp-for="Username" class="form-control" type="text">
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <label asp-for="Password" class="control-label">@Localizer["Password"]</label>
                    <input asp-for="Password" class="form-control" type="password">
                    <span class="glyphicon form-control-feedback"></span>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-primary btn-block">@Localizer["SignIn"]</button>
            </div>
        </form>
    </div>
</div>
