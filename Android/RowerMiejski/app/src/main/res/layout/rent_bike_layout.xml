<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <EditText
        android:id="@+id/RentBikeNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gridLayout"
        android:layout_alignParentStart="true"
        android:editable="false"
        android:ems="7"
        android:hint="Numer Roweru"
        android:text=""
        android:textSize="24sp" />
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:layout_alignParentBottom="true"
        android:id="@+id/gridLayout">
        <Button
            android:text="1"
            android:id="@+id/KeypadButtonNumber1"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="2"
            android:id="@+id/KeypadButtonNumber2"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="3"
            android:id="@+id/KeypadButtonNumber3"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="4"
            android:id="@+id/KeypadButtonNumber4"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="5"
            android:id="@+id/KeypadButtonNumber5"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="6"
            android:id="@+id/KeypadButtonNumber6"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="7"
            android:id="@+id/KeypadButtonNumber7"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="8"
            android:id="@+id/KeypadButtonNumber8"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="9"
            android:id="@+id/KeypadButtonNumber9"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="NIC"
            android:id="@+id/KeypadButtonTorch"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="0"
            android:id="@+id/KeypadButtonNumber0"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>
        <Button
            android:text="delete"
            android:id="@+id/KeypadButtonDelete"
            android:layout_gravity="fill_horizontal"
            android:layout_columnWeight="1"
            android:layout_margin="1dp"/>

        </GridLayout>

    <Button
        android:id="@+id/RentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/gridLayout"
        android:text="WypoÅ¼ycz"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/RentBikeNumber"
        android:layout_marginBottom="1dp"
        android:maxLines="1"/>

    <ListView
        android:id="@+id/RentBikeListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/RentBikeNumber"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
</RelativeLayout>