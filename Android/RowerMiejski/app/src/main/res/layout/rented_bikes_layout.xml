<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical">

        <LinearLayout
            android:id="@+id/rented_bike_number_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentStart="true"
            android:layout_margin="8dp"
            >

            <TextView
                android:id="@+id/rented_bike_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Rower nr" />

            <TextView
                android:id="@+id/rented_bike_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="91234" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rented_bike_lock_number_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/rented_bike_number_layout"
            android:layout_margin="8dp"

            >

            <TextView
                android:id="@+id/rented_bike_lock_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Kod do linki" />

            <TextView
                android:id="@+id/rented_bike_lock_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="3491" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/rented_bike_duration_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/rented_bike_lock_number_layout"
            android:layout_margin="8dp"
            >

            <TextView
                android:id="@+id/rented_bike_duration_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"

                android:text="Czas" />

            <TextView
                android:id="@+id/rented_bike_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"

                android:text="00:05" />

        </LinearLayout>

        <Button
            android:id="@+id/return_bike_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Zwrot"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/rented_bike_duration_layout"
            />


</RelativeLayout>